class BiomassFuel:
    def __init__(self, name, cellulose_ratio):
        self.name = name
        self.cellulose_ratio = cellulose_ratio

class BiomassSimulation:
    BASE_HEAT = 16.2 

    def __init__(self, fuel, dryness, temperature, oxygen_status):
        self.fuel = fuel
        self.dryness = dryness
        self.temperature = temperature
        self.oxygen_status = oxygen_status

    def calculate_heat(self):
        base_heat = (self.fuel.cellulose_ratio / 100) * self.BASE_HEAT
        moisture_factor = {'ê±´ì¡°': 0.05, 'ë³´í†µ': 0.15, 'ìŠµí•¨': 0.3}
        moisture_penalty = moisture_factor[self.dryness] * base_heat

        oxygen_penalty = 0
        if self.oxygen_status == 'ë¶€ì¡±':
            oxygen_penalty = 0.2 * base_heat
        elif self.oxygen_status == 'ê³¼ì‰':
            oxygen_penalty = 0.1 * base_heat

        final_heat = base_heat - moisture_penalty - oxygen_penalty
        return round(final_heat, 2)

    def calculate_efficiency(self):
        return round((self.calculate_heat() / self.BASE_HEAT) * 100, 2)

fuel_library = {
    'ë‚˜ë¬´': 45,
    'ë³ì§š': 38,
    'íëª©ì¬': 50,
    'ìŒì‹ë¬¼ì“°ë ˆê¸°': 25,
    'í†±ë°¥': 55,
    'ì»¤í”¼ë°•': 60,
}

dryness_list = ['ê±´ì¡°', 'ë³´í†µ', 'ìŠµí•¨']
oxygen_list = ['ë¶€ì¡±', 'ì ì •', 'ê³¼ì‰']

print("ğŸŒ± ë°”ì´ì˜¤ë§¤ìŠ¤ íš¨ìœ¨ ì‹œë®¬ë ˆì´ì…˜")
print("ì‚¬ìš© ê°€ëŠ¥í•œ ì—°ë£Œ:", list(fuel_library.keys()))

fuel_name = input("ì—°ë£Œë¥¼ ì…ë ¥í•˜ì„¸ìš”: ")
while fuel_name not in fuel_library:
    fuel_name = input("âš  ìœ íš¨í•œ ì—°ë£Œëª…ì„ ë‹¤ì‹œ ì…ë ¥í•˜ì„¸ìš”: ")

print("\nê±´ì¡° ìƒíƒœë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”:")
print("1. ê±´ì¡°: ì—°ë£Œê°€ ë¶€ì„œì§€ê±°ë‚˜ ì‰½ê²Œ ë¶€ìŠ¤ëŸ¬ì§")
print("2. ë³´í†µ: ì•½ê°„ ìŠµê¸°ê°€ ëŠê»´ì§")
