while dryness not in ['1', '2', '3']:
    dryness = input("âš  1, 2, 3 ì¤‘ í•˜ë‚˜ë¥¼ ì„ íƒí•˜ì„¸ìš”: ")

dryness = ['ê±´ì¡°', 'ë³´í†µ', 'ìŠµí•¨'][int(dryness) - 1]

# ì‚°ì†Œ ìƒíƒœ ì…ë ¥
print("\nì‚°ì†Œ ìƒíƒœë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”:")
print("1. ë¶€ì¡±: ì—°ë£Œê°€ ë„ˆë¬´ ì••ì¶•ë˜ì–´ ê³µê¸°ê°€ ì˜ í†µí•˜ì§€ ì•ŠìŒ")
print("2. ì ì •: ì—°ë£Œê°€ ì ë‹¹íˆ í¼ì ¸ ìˆê³  ê³µê¸°ê°€ ì›í™œí•˜ê²Œ íë¦„")
print("3. ê³¼ì‰: ë„ˆë¬´ ë§ì€ ê³µê¸°ê°€ ê³µê¸‰ë¨")
oxygen = input("ì‚°ì†Œ ìƒíƒœ (1/2/3): ")
while oxygen not in ['1', '2', '3']:
    oxygen = input("âš  1, 2, 3 ì¤‘ í•˜ë‚˜ë¥¼ ì„ íƒí•˜ì„¸ìš”: ")

oxygen = ['ë¶€ì¡±', 'ì ì •', 'ê³¼ì‰'][int(oxygen) - 1]

try:
    temperature = float(input("ì—°ì†Œ ì˜¨ë„(â„ƒ): "))
except ValueError:
    print("âš  ìˆ«ìë§Œ ì…ë ¥í•˜ì„¸ìš”.")
    exit()

# ì‹œë®¬ë ˆì´ì…˜ ì‹¤í–‰
fuel = BiomassFuel(fuel_name, fuel_library[fuel_name])
sim = BiomassSimulation(fuel, dryness, temperature, oxygen)

eff = sim.calculate_efficiency()
